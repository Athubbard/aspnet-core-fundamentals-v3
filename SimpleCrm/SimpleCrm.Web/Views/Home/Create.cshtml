@using SimpleCrm;
@model SimpleCrm.Web.Models.CustomerEditViewModel
@{
    ViewBag.Title = Model.LastName;
}

<div>
    <h1>Create</h1>
</div>

<div>
    @Html.ValidationSummary()
    @using (Html.BeginForm())
      {
         <div>
             @Html.LabelFor(m => m.FirstName)
             @Html.EditorFor(m => m.FirstName)
             @Html.ValidationMessageFor(m => m.FirstName)
         </div>
         <div>
             @Html.LabelFor(m => m.LastName)
             @Html.EditorFor(m => m.LastName)
             @Html.ValidationMessageFor(m => m.LastName)
         </div>
         <div>
             @Html.LabelFor(m => m.PhoneNumber)
             @Html.EditorFor(m => m.PhoneNumber)
             @Html.ValidationMessageFor(m => m.PhoneNumber)
         </div>
         <div>
             @Html.LabelFor(x => x.Type)
             @Html.DropDownListFor(x => x.Type, Html.GetEnumSelectList(typeof(CustomerType)))
            
             
         </div>
         <div>
             @Html.LabelFor(x => x.OptInNewsletter)
             @Html.CheckBoxFor(x => x.OptInNewsletter)
         </div>

        <button type="submit">Save</button>
         
      }
</div>
