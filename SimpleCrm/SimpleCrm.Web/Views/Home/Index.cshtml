@using SimpleCrm.Web.Controllers 
@model SimpleCrm.Web.Models.HomePageViewModel
@{
    ViewBag.Title = "Customers";
    
}


    <h1>Customers</h1>
    


    <table>
        <tr>
            <th>Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
        </tr>

        @foreach (var customer in @Model.Customers)
         {
        <tr>
            <td>
                <a href="/home/details/@customer.Id">Details</a>
            @Html.ActionLink("View", nameof(HomeController.Details), new { id = customer.Id })
            </td>
            <td>@customer.FirstName</td>
            <td>@customer.LastName</td>
            <td>@customer.PhoneNumber</td>
        </tr>
         }
    </table>
    <div>    
        
            @section footer {
               <h3>@Model.CurrentMessage</h3>
            }
        
    </div>
